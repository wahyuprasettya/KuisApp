<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail_buah">

    <ImageView
        android:id="@+id/imgbuah"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/apel" />

    <TextView
        android:id="@+id/txtbuah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nama_buah"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txthargabuah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/harga_buah"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtdetailbuah"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/detail_buah"
        android:textSize="25sp" />


</LinearLayout>